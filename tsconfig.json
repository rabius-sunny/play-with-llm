{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ESNext",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "bun.lockb",
    "bun.lock",
    "build",
    "coverage"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.json"
  ]
}
